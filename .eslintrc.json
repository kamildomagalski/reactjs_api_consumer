{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
			"react-app", "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
				"prettier",
        "@typescript-eslint"
    ],
		"rules": {
			"prettier/prettier": [
				"error",
				{
					"tabWidth": 2,
					"printWidth": 120,
					"trailingComma": "es5",
					"semi": true,
					"jsxSingleQuote": true,
					"singleQuote": true,
					"endOfLine": "auto",
					"max-len": ["error", { "code": 80 }]
				}
			]
		}
}
